<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/supermercadosdeltaplus</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <property name="hibernate.current_session_context_class">thread</property>

	<property name="hibernate.c3p0.timeout">3600</property>
	<property name="hibernate.c3p0.maxIdleTime">3600</property>
	<property name="hibernate.c3p0.acquire_increment">3</property>
	<property name="hibernate.c3p0.idle_test_period">10</property>
	<property name="hibernate.c3p0.min_size">5</property>
	<property name="hibernate.c3p0.max_size">75</property>
	<property name="hibernate.c3p0.max_statements">10</property>

	<property name="hibernate.c3p0.preferredTestQuery">select 1</property>
	<property name="hibernate.c3p0.testConnectionOnCheckout">true</property>
    
    <property name="show_sql">true</property>
    <property name="format_sql">true</property>

	<property name="hbm2ddl.auto">create</property> <!-- CREA LA BD -->
    <!-- update validate -->
    <mapping class="com.fabiocompany.supermercadosdeltaplus.model.Cabeceraticket" />
    <mapping class="com.fabiocompany.supermercadosdeltaplus.model.Detalleoferta" />
    <mapping class="com.fabiocompany.supermercadosdeltaplus.model.Detalleticket" />
    <mapping class="com.fabiocompany.supermercadosdeltaplus.model.Personausuario" />
    <mapping class="com.fabiocompany.supermercadosdeltaplus.model.Producto" />
    <mapping class="com.fabiocompany.supermercadosdeltaplus.model.Tarjeta" />
    <mapping class="com.fabiocompany.supermercadosdeltaplus.model.Tipodepago" />
    <mapping class="com.fabiocompany.supermercadosdeltaplus.model.Usuario" />
  </session-factory>
</hibernate-configuration>
